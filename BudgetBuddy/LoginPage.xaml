<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetBuddy.LoginPage"
             NavigationPage.HasNavigationBar="False"
             Title="LoginPage">
    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="BudgetBuddy" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Log In" Clicked="OnLoginClicked" />
        <Button Text="Create Account" Clicked="OnCreateAccountClicked" />

        <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />

    </VerticalStackLayout>
</ContentPage>