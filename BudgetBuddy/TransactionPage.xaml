<?xml version="1.0" encoding="utf-8" ?>
<ContentPage    
             x:Class="BudgetBuddy.TransactionPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Add Transaction"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Type toggle -->
            <HorizontalStackLayout>
                <Button x:Name="IncomeBtn" Text="Income" Clicked="OnTypeClicked" />
                <Button x:Name="ExpenseBtn" Text="Expense" Clicked="OnTypeClicked" />
            </HorizontalStackLayout>

            <Entry x:Name="AmountEntry" Placeholder="Amount" Keyboard="Numeric" />

            <Picker x:Name="CategoryPicker" Title="Category">
            </Picker>

            <DatePicker x:Name="DatePicker" />

            <Editor x:Name="NoteEditor"
              Placeholder="Note (optional)"
              AutoSize="TextChanges"
              HeightRequest="80" />

            <Button Text="Save" Clicked="OnSaveClicked"/>
            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>