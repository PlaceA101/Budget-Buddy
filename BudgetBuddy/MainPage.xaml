<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BudgetBuddy.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Budget Dashboard"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20">

        <Label Text="Your Balance" 
               FontSize="24" 
               HorizontalOptions="Center" 
               TextColor="DarkGreen"/>

        <Label x:Name="BalanceLabel" 
               Text="$0.00" 
               FontSize="32" 
               FontAttributes="Bold" 
               HorizontalOptions="Center"
               TextColor="Black"/>

        <Label Text="Recent Transactions" 
               FontSize="18" 
               FontAttributes="Bold" 
               TextColor="Gray"/>

        <CollectionView x:Name="TransactionsView" HeightRequest="200">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto">
                        <!-- Category on the left -->
                        <Label Grid.Column="0" Text="{Binding Category}" FontSize="16" VerticalOptions="Center" />

                        <!-- Note in the middle, centered in its column -->
                        <Label Grid.Column="1" Text="{Binding Note}" FontSize="14" TextColor="Gray" HorizontalOptions="Center" VerticalOptions="Center" LineBreakMode="TailTruncation" IsVisible="{Binding Note, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

                        <!-- Amount on the right -->
                        <Label Grid.Column="2" Text="{Binding Amount, StringFormat='{}{0:C}'}" FontSize="16" HorizontalOptions="End" VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button Text="Add Income" BackgroundColor="Green" TextColor="White" Clicked="OnAddIncomeClicked"/>
            <Button Text="Add Expense" BackgroundColor="Red" TextColor="White" Clicked="OnAddExpenseClicked"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>