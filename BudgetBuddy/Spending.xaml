<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BudgetBuddy.Spending"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Spending"
             BackgroundColor="#b5d9bf">

    <VerticalStackLayout Padding="20">

        <Label Text="Your Spending"
               FontSize="25"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#4b644a"/>

        <Frame BorderColor="#49393b" Padding="10" Margin="5">
            <VerticalStackLayout>
                <Label x:Name="IncomeLabel"
                       FontSize="20"
                       TextColor="Green" />
                <Label x:Name="SpendingLabel"
                       FontSize="20"
                       TextColor="Red" />
                <Label x:Name="BalanceLabel"
                       FontSize="20"
                       FontAttributes="Bold" />  
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>